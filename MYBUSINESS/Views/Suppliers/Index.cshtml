@model IEnumerable<MYBUSINESS.Models.Supplier>
@{
    ViewBag.Title = "Suppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<center><h2>Suppliers</h2></center>

@*<p>
        @Html.ActionLink("Create New Supplier", "Create")
