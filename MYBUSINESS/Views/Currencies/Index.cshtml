<script type="text/javascript">
    $(document).ready(function () {

        $('#printMe').click(function () {

            if ($.fn.DataTable.isDataTable('#CustomerIndex')) {
                $('#CustomerIndex').DataTable().destroy();
            }

            //$("#printMe").hide();

            window.print();

        });

        //$('#SOSRIndex').DataTable({
        //    fixedHeader: {
